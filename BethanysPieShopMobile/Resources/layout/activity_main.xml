
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:label="@string/app_name"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/bethanylogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bethanyLogoImage" />
    <Button
        android:text="Order Pies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="@android:color/white"
        android:id="@+id/orderPiesButton" />
    <Button
        android:text="View Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="@android:color/white"
        android:id="@+id/viewCartItemsButton" />
    <Button
        android:text="About Us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="@android:color/white"
        android:id="@+id/aboutButton" />
     <Button
        android:text="View by Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/bethanyGreen"
        android:textColor="@android:color/white"
        android:id="@+id/pieByCategoryButton" />
</LinearLayout>